<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/categoryCell"
    android:layout_marginTop="0.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_deal_cell">

        <TextView
            android:id="@+id/text_view_deal_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="This is a item"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="17sp"
            android:layout_marginTop="8dp"
            app:autoSizeStepGranularity="2sp"/>

        <ImageView
            android:id="@+id/imageViewDeal"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_deal_price"
            android:text="From: Â£4.50"
            android:layout_marginTop="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/imageViewDeal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_deal_description"
            android:textSize="17sp"
            android:layout_below="@+id/text_view_deal_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="8dp"
            />

</RelativeLayout>